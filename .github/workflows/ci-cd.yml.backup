# ================================
# CI/CD Pipeline - GitHub Actions
# ================================
# Ce workflow s'exÃ©cute automatiquement Ã  chaque push sur main

name: CI/CD Pipeline

# ğŸ¯ DÃ‰CLENCHEURS : Quand ce workflow s'exÃ©cute
on:
  push:
    branches: [ main ]      # Ã€ chaque push sur main
  pull_request:
    branches: [ main ]      # Ã€ chaque PR vers main
  workflow_dispatch:        # Permet de lancer manuellement

# ğŸ“Š JOBS : Les tÃ¢ches Ã  exÃ©cuter
jobs:
  
  # ============================================
  # JOB 1 : TESTS
  # ============================================
  test:
    name: ğŸ§ª Tests AutomatisÃ©s
    runs-on: ubuntu-latest  # Machine virtuelle Ubuntu
    
    steps:
      # Ã‰tape 1 : RÃ©cupÃ©rer le code
      - name: ğŸ“¥ Checkout du code
        uses: actions/checkout@v4
      
      # Ã‰tape 2 : Installer Node.js
      - name: ğŸŸ¢ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'      # Cache npm pour aller plus vite
      
      # Ã‰tape 3 : Installer les dÃ©pendances
      - name: ğŸ“¦ Installation des dÃ©pendances
        run: npm ci        # ci = Clean Install (plus fiable que install)
      
      # Ã‰tape 4 : Lancer les tests
      - name: âœ… ExÃ©cution des tests
        run: npm test
      
      # Ã‰tape 5 : Upload du rapport de couverture (optionnel)
      - name: ğŸ“Š Upload du rapport de couverture
        uses: actions/upload-artifact@v4
        if: always()       # MÃªme si les tests Ã©chouent
        with:
          name: coverage-report
          path: coverage/
  
  # ============================================
  # JOB 2 : BUILD & PUSH DOCKER
  # ============================================
  build-and-push:
    name: ğŸ³ Build & Push Docker
    runs-on: ubuntu-latest
    needs: test            # âš ï¸ CRUCIAL : Attend que 'test' rÃ©ussisse
    
    # Ne s'exÃ©cute que sur push (pas sur PR)
    if: github.event_name == 'push'
    
    steps:
      # Ã‰tape 1 : RÃ©cupÃ©rer le code
      - name: ğŸ“¥ Checkout du code
        uses: actions/checkout@v4
      
      # Ã‰tape 2 : Setup Docker Buildx (pour des builds optimisÃ©s)
      - name: ğŸ”§ Setup Docker Buildx
        uses: docker/setup-buildx-action@v3
      
      # Ã‰tape 3 : Login sur Docker Hub
      # âš ï¸ IMPORTANT : Tu devras configurer des secrets dans GitHub
      - name: ğŸ”‘ Login Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_TOKEN }}
      
      # Ã‰tape 4 : Extraire les mÃ©tadonnÃ©es (tags, labels)
      - name: ğŸ·ï¸ Docker metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ secrets.DOCKER_USERNAME }}/hello-devops
          tags: |
            type=ref,event=branch
            type=sha,prefix={{branch}}-
            type=raw,value=latest,enable={{is_default_branch}}
      
      # Ã‰tape 5 : Build et Push l'image
      - name: ğŸš€ Build et Push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha    # Utilise le cache GitHub
          cache-to: type=gha,mode=max
  
  # ============================================
  # JOB 3 : NOTIFICATION (Optionnel)
  # ============================================
  notify:
    name: ğŸ“¢ Notification
    runs-on: ubuntu-latest
    needs: [test, build-and-push]
    if: always()           # S'exÃ©cute mÃªme en cas d'Ã©chec
    
    steps:
      - name: ğŸ“Š RÃ©sumÃ© du Pipeline
        run: |
          echo "ğŸ‰ Pipeline terminÃ© !"
          echo "Tests: ${{ needs.test.result }}"
          echo "Build & Push: ${{ needs.build-and-push.result }}"
